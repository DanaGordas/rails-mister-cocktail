<div class="container mt-3">
  <h1>Mister Cocktail</h1>

  <div class="card m-3" style="width: 18rem;">
    <% @cocktails.each do |cocktail| %>
      <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1498&q=80" width="100%"
         height="100" alt="cocktail">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text">A great cocktail</p>
        <button type="button" class="btn btn-primary"><%= link_to "See details", cocktail_path(cocktail) %></button>
      </div>
    <% end %>
  </div>

  <button type="button" class="btn btn-light mt-3"><%= link_to "Add new cocktail", new_cocktail_path %></button>
</div>
