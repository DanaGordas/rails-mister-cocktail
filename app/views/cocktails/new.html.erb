<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h1>New Cocktail</h1>


      <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-gradient mt-3" %>
      <% end %>

      <%= link_to "<i class='fas fa-undo-alt' style='color: white;'></i> Back".html_safe, root_path, class: "btn btn-gradient mt-3" %>
    </div>
  </div>

</div>
