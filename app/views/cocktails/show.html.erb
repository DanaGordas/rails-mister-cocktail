<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        <% if @cocktail.photo.attached?  %>
          url('<%= cl_image_path @cocktail.photo.key %>')
        <% else %>
        url(<%= cl_image_path 'syuhi6cfo3pcfpzqyovo' %>)
        <% end %>">
        <%= @cocktail.name %>
      </div>

      <div class="centered mt-3">
        <ul class="list-group">
          <li class="list-group-item" id="ingredients">Ingredients<%= link_to "<i class='fas fa-plus ml-2' data-toggle='tooltip' data-placement='top' title='Add ingredient' id='add_ingredient'></i>".html_safe, new_cocktail_dose_path(@cocktail) %></li>
          <% @cocktail.doses.each do |dose|%>
            <li class="list-group-item">
              <%= dose.description %>
              <%= dose.ingredient.name %>
              <%= link_to "<i class='fas fa-trash-alt ml-2'></i>".html_safe, dose_path(dose), method: :delete , data: { confirm: "Are you sure you want to remove the ingredient?" }%>
            </li>
          <% end %>
        </ul>
      </div>
      <%= link_to "Back", root_path, class: "btn btn-gradient mt-3" %>
    </div>

  </div>

</div>
